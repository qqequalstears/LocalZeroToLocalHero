<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #FCFFF0;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controller.GUIControllers.ViewSelectedInitiative.ViewSelectedInitiativeController">

   <children>
      <!-- Initiative Name Label -->
      <Label fx:id="initName" layoutX="274.0" layoutY="14.0" text="Label" textFill="#5b9e46">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>

      <!-- Comment Section -->
      <VBox alignment="CENTER" prefWidth="350.0" spacing="10" />
      <!-- Scrollable Comment List -->
      <ScrollPane fx:id="commentsScrollPane" fitToWidth="true" layoutX="125.0" layoutY="189.0" prefHeight="120.0" prefWidth="350.0">
         <content>
            <VBox fx:id="commentsBox" spacing="5">
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
               <style>
                        -fx-background-color: F2F2F2;
                        -fx-border-color: CCCCCC;
                        -fx-border-radius: 6;
                        -fx-background-radius: 6;
                     </style>
            </VBox>
         </content>
      </ScrollPane>

      <!-- Text input field for new comments -->
      <TextField fx:id="txtInputField" layoutX="125.0" layoutY="309.0" onAction="#handleAddComment" prefHeight="25.0" prefWidth="350.0" />
   </children>
</AnchorPane>
